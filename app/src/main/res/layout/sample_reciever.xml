<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:id="@+id/chatLayout"
    android:background="@drawable/bg_reciever"
    android:maxWidth="320dp"
    android:maxHeight="400dp"
    android:minHeight="32dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/receiverText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:inputType="textLongMessage|textMultiLine"
        android:maxWidth="272dp"
        android:minWidth="48dp"
        android:text="Hey there! How are you, man!"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/receiverTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00 PM"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="3dp"
        android:layout_below="@id/receiverText"
        android:layout_alignLeft="@id/receiverText"
         />

    </RelativeLayout>